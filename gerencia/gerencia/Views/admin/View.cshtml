@model IEnumerable<gerencia.Models.empleados>


<div class="card-header">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Agregar nuevo empleado</button>
</div>
<div>
    <div class="table-responsive">
        <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        NOMBRE
                    </th>
                    <th>
                        EDAD
                    </th>
                    <th>
                        ESTADO
                    </th>
                    <th>
                        PAIS
                    </th>
                    <th>
                        ACCION
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpleadoID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pais)
                        </td>
                        <td>

                            <a href="#" class="fa fa-edit" style="color:green" onclick="return getbyID(@Html.DisplayFor(modelItem => item.EmpleadoID))"></a>|
                            <a href="#" class="fa fa-user-times " style="color:red" onclick="Delele(@Html.DisplayFor(modelItem => item.EmpleadoID))"></a>
                        </td>
                    </tr>
                }

            </tbody>


        </table>
    </div>
</div>
<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/dataTables.bootstrap4.js"></script>
<script src="~/Scripts/datatables-demo.js"></script>
<script src="~/Scripts/empleados.js"></script>